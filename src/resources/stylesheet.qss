/* ===== DIALOG STYLING - SIMPLIFIED ===== */


QMainWindow {
    background-color: #f0f0f0; /* Light gray background */
    color: #333333; /* Dark gray text */
}
QWidget { /* Apply to central widget and docked widgets */
    background-color: #f0f0f0;
    color: #333333;
}
/* Add specific rules for centralWidget and its main child */
QWidget#centralWidget {
    background-color: #f0f0f0;
}
QWidget#widget { /* The nested QWidget inside centralWidget */
    background-color: #f0f0f0;
}
QLabel {
    color: #333333;
}
/* Add specific rules for centralWidget and its main child */
QWidget#centralWidget {
