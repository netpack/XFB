QLineEdit, QTextEdit, QPlainTextEdit, QSpinBox {
    background-color: #ffffff; /* White background for inputs */
    color: #333333;
    border: 1px solid #cccccc; /* Medium-light gray border */
    selection-background-color: #007acc; /* Keep accent blue */
    selection-color: white; /* White text on blue selection */
}
QPushButton, QToolButton {
    background-color: #e0e0e0; /* Light gray button background */
    color: #333333;
    border: 1px solid #b0b0b0; /* Slightly darker border for buttons */
    padding: 5px;
}
QPushButton:hover, QToolButton:hover {
    background-color: #d0d0d0; /* Slightly darker gray on hover */
}
QPushButton:pressed, QToolButton:pressed {
    background-color: #c0c0c0; /* Even darker gray when pressed */
}
QComboBox {
    background-color: #ffffff; /* White background */
    color: #333333;
    border: 1px solid #cccccc;
    selection-background-color: #007acc;
    /* selection-color: white; */ /* Usually inherits text color */
}
QComboBox::drop-down {
    border: none;
}
QComboBox QAbstractItemView {
    background-color: #ffffff;
    color: #333333;
    selection-background-color: #007acc;
    selection-color: white;
    border: 1px solid #cccccc;
    outline: 0px;
}
QDateEdit {
    background-color: #ffffff;
    color: #333333;
    border: 1px solid #cccccc;
    selection-background-color: #007acc;
    selection-color: white;
}
QDateEdit::drop-down {
     /* Style dropdown button if needed */
}
QDateEdit QAbstractItemView {
    background-color: #ffffff;
    color: #333333;
    selection-background-color: #007acc;
}
QTableView, QListView, QTreeView {
    background-color: #ffffff; /* White background for views */
    color: #333333;
    gridline-color: #e0e0e0; /* Lighter gray gridlines */
    selection-background-color: #007acc;
    selection-color: white;
    border: 1px solid #cccccc;
}
QHeaderView::section {
    background-color: #e0e0e0; /* Light gray header */
    color: #333333;
    padding: 4px;
    border: 1px solid #d0d0d0; /* Slightly darker border */
