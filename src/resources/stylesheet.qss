/* Base dialog */
QDialog {
    background-color: #ffffff;
    color: #333333;
}

/* Basic containers - rely on C++ attributes for background */
QDialog QWidget {
    /* No background-color here by default, let C++ attributes enable QSS inheritance/rules */
    border: none; /* Only if you want NO borders on basic QWidgets */
    color: #333333;
}
QDialog QFrame {
     background-color: #ffffff;
}
QDialog QGroupBox {
    /* background-color: transparent; Let C++ attributes handle page background */
    border: 1px solid #cccccc;
    margin-top: 10px;
    padding: 5px;
}
QDialog QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 3px;
    background-color: #ffffff; /* Match dialog background */
    color: #333333;
}

/* Labels inside dialogs */
QDialog QLabel {
     background-color: transparent; /* Ensure transparency */
     color: #333333;
}

/* --- Tab Widget Styling (Rely on C++ Attributes for Content BG) --- */
QDialog QTabWidget {
     background-color: transparent; /* Let dialog show through */
     border: none;
}

QDialog QTabWidget::pane {
    /* Background is handled by the page widget via C++ */
    border: 1px solid #cccccc; /* Style only the border */
}

/* Target the WIDGETS INSIDE the pane explicitly */
/* This is where the white background needs to be enforced IF needed */
QDialog QTabWidget QWidget {
    /* This rule applies to ALL descendants, including the tab page */
    background-color: #ffffff; /* Set the desired background */
    color: #333333;
    border: none; /* Reset border for content widgets unless styled otherwise */
}


QDialog QTabBar {
    qproperty-drawBase: 0;
    background-color: #eeeeee;
    border: none;
}

QDialog QTabBar::tab {
    color: #333333;
    background-color: #f0f0f0; /* Inactive */
    border: 1px solid #cccccc;
    border-bottom-color: #cccccc;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 4px 8px;
    min-width: 60px;
}

QDialog QTabBar::tab:selected {
    background-color: #eeeeee; /* Active tab matches pane */
    border-bottom-color: #ffffff;
    margin-bottom: -1px;
}

QDialog QTabBar::tab:!selected:hover {
    background-color: #e0e0e0;
}
/* --- End Simplified Dialog/Tab Styling --- */

